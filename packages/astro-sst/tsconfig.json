{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "outDir": "./dist",
    "target": "ES2020"
  }
}
